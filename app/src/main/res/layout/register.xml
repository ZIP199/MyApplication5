<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <fragment
        android:id="@+id/picture"
        class="com.example.administrator.myapplication.fragment.PictureInputCellFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_inputcell_picture"></fragment>


    <fragment
        android:id="@+id/input_account"
        class="com.example.administrator.myapplication.fragment.SimpleTextCellFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        tools:layout="@layout/fragment_inputcell_simpletext"></fragment>

    <fragment
        android:id="@+id/input_email"
        class="com.example.administrator.myapplication.fragment.SimpleTextCellFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_inputcell_simpletext"></fragment>

    <fragment
        android:id="@+id/input_password"
        class="com.example.administrator.myapplication.fragment.SimpleTextCellFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_inputcell_simpletext"></fragment>

    <fragment
        android:id="@+id/input_twice"
        class="com.example.administrator.myapplication.fragment.SimpleTextCellFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_inputcell_simpletext"></fragment>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="@string/register"

            />

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/exit" />

    </LinearLayout>


</LinearLayout>